# Backend selection: php, python, node
COMPOSE_PROFILES=php

JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256

CLOUDPUB_TOKEN='your_cloudpub_token_here'
CLIENT_ID='bitrix_application_client_id'
CLIENT_SECRET='bitrix_application_client_secret'
SCOPE='bitrix_application_scope'

## Domain #######################################
# for http://frontend:3000 ####
VIRTUAL_HOST='https://your_cloudpub_sub_domain.cloudpub.ru'
# for http://api-php:8000 ####
# for http://api-node:8000 ####
# for http://api-python:8000 ####
NUXT_PUBLIC_API_URL='https://your_cloudpub_sub_domain.cloudpub.ru'

# Database
DB_NAME=appdb
DB_USER=appuser
DB_PASSWORD=apppass

# BUILD_TARGET dev | production
BUILD_TARGET=dev

## SYSTEM ######################################
# Don't change unless absolutely necessary
# need sync with docker
VIRTUAL_PORT=3000
#NUXT_APP_INTERNAL_URL='http://frontend:3000'
#NUXT_ALLOWED_IPS='127.0.0.1,::1'
#PGPORT=5432
PORT=3000
HOST=0.0.0.0
NODE_ENV='development'
## MEMO: don't use `DEV=true` -> it will break @bitrix24/ui
